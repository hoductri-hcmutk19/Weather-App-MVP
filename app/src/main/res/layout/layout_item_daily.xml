<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginStart="@dimen/dp_10"
    android:background="@drawable/bg_home_screen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textDailyTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="12, Sep"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        android:fontFamily="@font/overpass_bold"
        android:shadowColor="@color/textShadow"
        android:shadowDx="2"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:layout_marginStart="@dimen/dp_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/imageDailyIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="7dp"
        android:src="@drawable/ic_clouds_day"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textDailyTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="29"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        android:fontFamily="@font/overpass"
        android:shadowColor="@color/textShadow"
        android:shadowDx="2"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:layout_marginEnd="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/degree_celsius_symbol"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:fontFamily="@font/overpass"
        android:shadowColor="@color/textShadow"
        android:shadowDx="2"
        android:shadowDy="4"
        android:shadowRadius="4"
        app:layout_constraintStart_toEndOf="@id/textDailyTemperature"
        app:layout_constraintTop_toTopOf="@id/textDailyTemperature" />

</androidx.constraintlayout.widget.ConstraintLayout>
