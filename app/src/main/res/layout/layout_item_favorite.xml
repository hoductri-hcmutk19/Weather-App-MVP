<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/dp_12"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textFavoriteLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/ho_chi_minh_vn"
        android:textColor="@color/textSecondary"
        android:textSize="@dimen/sp_16"
        android:fontFamily="@font/overpass_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textGmtLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/utc_07_00"
        android:textColor="@color/splashNavigationBar"
        android:textSize="@dimen/sp_15"
        android:fontFamily="@font/overpass_semibold"
        android:layout_marginTop="@dimen/dp_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textFavoriteLocation"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_45"
        android:backgroundTint= "@color/buttonDeleteBackground"
        android:text="@string/delete"
        android:textSize="@dimen/sp_15"
        android:fontFamily="@font/overpass"
        android:textColor="@color/white"
        android:elevation="@dimen/dp_4"
        android:stateListAnimator="@null"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:layout_marginEnd="@dimen/dp_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
