<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginStart="@dimen/dp_10"
    android:background="@drawable/bg_home_screen"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textHourlyTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="29"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        android:fontFamily="@font/overpass"
        android:shadowColor="@color/textShadow"
        android:shadowDx="2"
        android:shadowDy="4"
        android:shadowRadius="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/degree_celsius_symbol"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:fontFamily="@font/overpass"
        android:shadowColor="@color/textShadow"
        android:shadowDx="2"
        android:shadowDy="4"
        android:shadowRadius="4"
        app:layout_constraintStart_toEndOf="@id/textHourlyTemperature"
        app:layout_constraintTop_toTopOf="@id/textHourlyTemperature" />

    <ImageView
        android:id="@+id/imageHourlyIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="7dp"
        android:src="@drawable/ic_clouds_day"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textHourlyTemperature" />

    <TextView
        android:id="@+id/textHourlyTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="15:00"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        android:fontFamily="@font/overpass"
        android:shadowColor="@color/textShadow"
        android:shadowDx="2"
        android:shadowDy="4"
        android:shadowRadius="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageHourlyIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>
